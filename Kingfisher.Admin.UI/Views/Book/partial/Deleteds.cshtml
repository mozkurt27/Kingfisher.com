
@{
    Layout = null;
}

@model List<Kingfisher.Admin.UI.Models.BookDTO>

<div class="container">

    <div class="row">
        <div class="col-md-offset-2 col-md-8">



            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Category Name</th>
                        <th>Publisher Name</th>
                        <th colspan="2">Full Delete/Come Back</th>
                    </tr>
                </thead>
                <tbody id="t-body">
                    @foreach (var item in Model)
            {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.category</td>
                            <td>@item.publisher</td>
                            <td colspan="2">
                                <form action="/book/fulldelete/@item.Id" method="post" class="form-horizontal">
                                    <input type="submit" value="DELETE" class="btn btn-danger form-control" />
                                </form>
                                <form action="/book/comeback/@item.Id" method="post" class="form-horizontal">
                                    <input type="submit" value="BACK" class="btn btn-warning form-control" />
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    </div>
</div>
